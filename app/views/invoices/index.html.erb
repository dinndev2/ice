<div class="container">
  <div class="d-flex justify-content-between align-items-center">  
    <div>  
      <h1 class="text-title mt-4 fs-2">Invoices</h1>
      <div class="d-flex gap-2 mb-4 text-secondary align-items-center">
        <i class="bi bi-info-circle"></i>
        You can hover over the invoice tile for more info!
      </div>
    </div>
    <%= link_to settings_path, class: "rotate-on-hover" do %>
      <i class="bi bi-gear-fill fs-2 text-title"></i>
    <% end %>

  </div>
  <div class="d-flex flex-column">  
    <%= link_to new_invoice_path,
      data: { turbo_frame: 'invoice'},
      class: "d-inline-flex align-items-center custom-button mb-4 primary-bg custom-hover-normal primary-border py-1 px-2 gap-2 rounded text-decoration-none text-title w-25" do %>
        Create new Invoice
        <i class="bi bi-plus fs-4"></i>
    <% end %>

    <div class="d-flex flex-col gap-2">
      <%= turbo_frame_tag 'invoices' do %>
        <%= render @invoices %>
      <% end %>
    </div>
  </div>
  <%= turbo_frame_tag 'invoice' do %>  
    <%= render 'form', invoice: @invoice %>
  <% end %>
</div>

