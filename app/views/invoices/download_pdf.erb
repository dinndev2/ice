<!DOCTYPE html>
<html>
  <head>
    <style>
      @font-face {
        font-family: 'DejaVu Sans';
        src: url('file:///usr/share/fonts/truetype/dejavu/DejaVuSans.ttf');
      }

      body {
        font-family: 'DejaVu Sans', sans-serif;
        margin: 0;
        padding: 0;
        font-size: 14px;
      }

      .header {
        display: table;
        width: 100%;
        margin-bottom: 2em;
      }

      .header h1 {
        display: table-cell;
        vertical-align: top;
        font-size: 2em;
        margin: 0;
      }

      .header .logo {
        display: table-cell;
        text-align: right;
        vertical-align: top;
      }

      .info-table {
        width: 100%;
        margin-bottom: 2em;
      }

      .info-table td {
        padding: 10px 0;
        vertical-align: top;
      }

      .items-table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
        margin-top: 2em;
      }

      .items-table th {
        padding: 10px;
        font-size: 15px;
        background: #4E4C4C;
        color: white;
        font-weight: normal;
      }

      .items-table td {
        padding: 10px;
      }

      .total-table {
        width: 100%;
        margin-top: 2em;
      }

      .total-table td {
        font-size: 16px;
        padding: 8px;
      }

      .total-amount {
        width: 160px;
        text-align: center;
        background: #F8F8F8;
        border-radius: 5px;
        padding: 10px;
      }
    </style>
  </head>
  <body>
    <div class="container" style="padding: 40px;">

      <div class="header">
        <h1>INVOICE <%= @invoice.name %></h1>
        <div class="logo">
          <% if @invoice.company_logo.attached? %>
            <%= wicked_pdf_image_tag url_for(@invoice.company_logo) %>
          <% end %>
        </div>
      </div>

      <table class="info-table">
        <tr>
          <td><strong>From:</strong> <%= @invoice.from %></td>
          <td style="text-align: right;"><strong>Date:</strong> <%= @invoice.date %></td>
        </tr>
        <tr>
          <td><strong>To:</strong> <%= @invoice.to %></td>
          <td style="text-align: right;"><strong>Due Date:</strong> <%= @invoice.due_date %></td>
        </tr>
        <tr>
          <td colspan="2"><strong>Details:</strong> <%= @invoice.details %></td>
        </tr>
      </table>

      <table class="items-table">
        <thead>
          <tr>
            <th>Item / Service</th>
            <th>Quantity</th>
            <th>Rate</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @expences.each do |expence| %>
            <tr>
              <td><%= expence.name %></td>
              <td><%= expence.quantity %></td>
              <td><%= number_to_currency(expence.rate) %></td>
              <td><%= number_to_currency(expence.total) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table class="total-table">
        <tr>
          <td style="text-align: right;"><strong>Total Due:</strong></td>
          <td class="total-amount"><%= number_to_currency(@invoice.total) %></td>
        </tr>
      </table>

    </div>
  </body>
</html>
